//

// Zone Descriptor for the full view
//----------------------------------
IDZD_FULL_ZONEMAP ZONEMAPDESCRIPTOR MOVEABLE IMPURE LOADONCALL DISCARDABLE
BEGIN
    IDZM_INPUT_FULL, IDB_I_FULL,      " I  ",
    IDZM_SA_FULL, IDB_SA_FULL,      " S  ",
    IDZM_INPUT_FULL, IDB_I_FULL,      " M  ",
    0xffff, 0xffff, 0x0000, 0x0000,
END

// Zone Descriptor for the zoom view
//----------------------------------
IDZD_ZOOM_ZONEMAP ZONEMAPDESCRIPTOR MOVEABLE IMPURE LOADONCALL DISCARDABLE
BEGIN
    IDZM_INPUT_ZOOM, IDB_I_ZOOM,      " 1  ",
    IDZM_SUBMATRIX_ZOOM, IDB_SM_ZOOM, " 2  ",
    IDZM_MASTER_ZOOM,    IDB_MASTER_ZOOM, " 3  ",

    0xffff, 0xffff, 0x0000, 0x0000,
END

//////////////////////////////////////////////////////////////////

// Table of all of the zonemap descriptors for the Full View
//----------------------------------------------------------
IDTAZ_FULL   TABLE_OF_ALL_ZONEMAPS MOVEABLE IMPURE LOADONCALL DISCARDABLE
BEGIN
    IDZD_FULL_ZONEMAP, IDS_FULL_VIEW_640,
    IDZD_FULL_ZONEMAP, IDS_FULL_VIEW_800,
    IDZD_FULL_ZONEMAP, IDS_FULL_VIEW_1024,
    0xffff, 0xffff,
END

// Table of all of the zonemap descriptors for the Zoom View
//----------------------------------------------------------
IDTAZ_ZOOM   TABLE_OF_ALL_ZONEMAPS MOVEABLE IMPURE LOADONCALL DISCARDABLE
